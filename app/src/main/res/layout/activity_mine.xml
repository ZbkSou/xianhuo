<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/title_cole"

        >

        <LinearLayout
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <com.ihaveu.bc.widget.DTextView
                android:id="@+id/login_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:background="@drawable/mine_but_bg"
                android:text="登录"/>

            <com.ihaveu.bc.widget.DTextView
                android:id="@+id/register_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:textSize="20dp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:background="@drawable/mine_but_bg"
                android:text="注册"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.ihaveu.bc.widget.DTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mine_user_name"
                android:text="13102272166"/>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ihaveu.bc.widget.DTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="可用资金"
            />
        <com.ihaveu.bc.widget.DTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/mine_money_text"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:id="@+id/mine_add_money"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:id="@+id/mine_get_money"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:id="@+id/mine_money_layout"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/user"/>

        <com.ihaveu.bc.widget.DTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/user_img"
            android:text="出入金记录"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            android:paddingLeft="7dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_single_product_choose"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:id="@+id/mine_user_info_layout"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/user"/>

        <com.ihaveu.bc.widget.DTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/user_img"
            android:text="完善个人信息"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            android:paddingLeft="7dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_single_product_choose"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:id="@+id/mine_trade_layout"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/user"/>

        <com.ihaveu.bc.widget.DTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/user_img"
            android:text="交易记录"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            android:paddingLeft="7dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_single_product_choose"/>
    </RelativeLayout>
</LinearLayout>