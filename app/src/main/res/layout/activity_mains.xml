<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:orientation="vertical"
              android:background="@color/bgGray">

  <RelativeLayout
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:id="@+id/user_img"
      android:src="@drawable/user"/>
    <com.ihaveu.bc.widget.DTextView
      android:layout_marginLeft="10dp"
      android:layout_centerVertical="true"
      android:id="@+id/user_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/user_img"
      android:text="13102211111"
      android:textColor="@color/black"
      android:textSize="16dp"/>
    <com.ihaveu.bc.widget.DTextView
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_text"
        android:text="可用金12元"
        android:textColor="@color/black"
        android:textSize="16dp"/>
    <ImageView
      android:id="@+id/user_but"
      android:layout_centerVertical="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:paddingBottom="12dp"
      android:paddingLeft="7dp"
      android:paddingRight="12dp"
      android:paddingTop="12dp"
      android:src="@drawable/ic_single_product_choose"/>
  </RelativeLayout>
  <android.support.design.widget.TabLayout
      android:id="@+id/tabs"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      app:tabIndicatorColor="@color/cheng"
      app:tabSelectedTextColor="@color/cheng"
      app:tabTextColor="@android:color/black" />

  <android.support.v4.view.ViewPager
      android:id="@+id/viewpager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="50dp"
      />

</LinearLayout>