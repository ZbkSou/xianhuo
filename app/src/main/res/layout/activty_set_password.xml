<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/title_cole"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="45dp">
        <com.ihaveu.bc.widget.DTextView
            android:textColor="@color/white"
            android:text="@string/app_name"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!-- 密码 -->
    <com.ihaveu.bc.widget.DEditText
        android:layout_marginTop="10dp"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:d_background="@color/white"
        app:d_hint="@string/hint_password"
        app:maxLength="20"
        app:d_password="true">
    </com.ihaveu.bc.widget.DEditText>
    <!-- 重复密码 -->
    <com.ihaveu.bc.widget.DEditText
        android:id="@+id/repeat_password"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:d_background="@color/white"
        app:d_hint="@string/hint_repeat_password"
        app:maxLength="20"
        app:d_password="true">
    </com.ihaveu.bc.widget.DEditText>
    <!-- 注册按钮 -->
    <Button
        android:id="@+id/set_button"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cheng"
        android:gravity="center"
        android:text="修改密码"
        android:textColor="@color/white"/>
</LinearLayout>