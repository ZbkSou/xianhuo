<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.ihaveu.bc.widget.DTextView
      android:id="@+id/tran_item_flag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:layout_marginRight="10dp"/>

    <com.ihaveu.bc.widget.DTextView
      android:id="@+id/tran_item_integral"
      android:layout_width="wrap_content"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:layout_height="wrap_content"/>
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.ihaveu.bc.widget.DTextView
      android:id="@+id/tran_item_code"
      android:layout_width="wrap_content"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:layout_marginRight="10dp"
      android:layout_height="wrap_content"/>
    <com.ihaveu.bc.widget.DTextView
      android:id="@+id/tran_item_type"
      android:layout_width="wrap_content"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:layout_marginRight="10dp"
      android:layout_height="wrap_content"/>
    <com.ihaveu.bc.widget.DTextView
      android:id="@+id/tran_item_percent"
      android:layout_width="wrap_content"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:layout_height="wrap_content"/>
  </LinearLayout>
  <com.ihaveu.bc.widget.DTextView
    android:id="@+id/change_item_time"
    android:layout_width="wrap_content"
    android:textSize="20dp"
    android:layout_height="wrap_content"/>
  <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/bgGray"
    ></View>
</LinearLayout>